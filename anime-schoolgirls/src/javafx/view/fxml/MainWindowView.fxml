<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.model.DescriptionTextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root dividerPositions="0.5" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" orientation="VERTICAL" prefHeight="400.0" prefWidth="600.0" type="javafx.scene.control.SplitPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <right>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="startButton" focusTraversable="false" mnemonicParsing="false" text="Start" onAction="#playEpisode"/>
                              <Button fx:id="stopButton" visible="false" focusTraversable="false" mnemonicParsing="false" text="Stop" />
                           </children>
                        </HBox>
                     </center>
                  </BorderPane>
               </children>
            </VBox>
         </right>
         <left>
            <ImageView fx:id="seriesImage" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <DescriptionTextArea fx:id="seriesDescription" editable="false" focusTraversable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0">
         <items>
            <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Top Series">
                  <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
                  			<content>
                  				<TableView fx:id="topseriesTable">
                  					<columnResizePolicy>
                  						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  					</columnResizePolicy>
                  				</TableView>
                  			</content>
                  		</ScrollPane>
                     </content>
                </Tab>
                <Tab text="All Series">
                     <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
                  			<content>
                  				<TableView fx:id="seriesTable">
                  					<columnResizePolicy>
                  						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  					</columnResizePolicy>
                  				</TableView>
                  			</content>
                  		</ScrollPane>
                     </content>
                </Tab>
              </tabs>
            </TabPane>
               		<TabPane fx:id="episodeTabs" tabClosingPolicy="UNAVAILABLE">
               		<tabs>
               		<Tab text="Episodes">
               		<content>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
                     <content>
                        <TableView fx:id="epTable">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </ScrollPane>
                  </content>
                  </Tab>
                  <Tab text="Movies" >
                  <content>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
                     <content>
                        <TableView fx:id="movieTable">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </ScrollPane>
                  </content>
                  </Tab>
                  </tabs>
                  </TabPane>
         </items>
      </SplitPane>
   </items>
   <stylesheets>
		<URL value="@css/main-screen.css" />
	</stylesheets>
</fx:root>
